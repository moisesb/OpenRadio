<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel" type="net.moisesborges.ui.audio.mvvm.AudioPlayerViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/audio_player_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_close_24px"
                android:onClick="@{() -> viewModel.closeSelected()}"
                android:layout_marginStart="@dimen/audio_player_close_button_margin"
                android:layout_marginTop="@dimen/audio_player_close_button_margin"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/audio_player_image_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:setImage="@{viewModel.image}"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/audio_player_image_margin_top"
                android:layout_marginStart="@dimen/audio_player_image_margin_horizontal"
                android:layout_marginEnd="@dimen/audio_player_image_margin_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/audio_player_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.title}"
                android:textSize="@dimen/audio_player_title_text_size"
                android:textColor="@color/audio_player_title_text_color"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:layout_marginTop="@dimen/audio_player_title_margin_top"
                android:layout_marginStart="@dimen/audio_player_title_margin_horizontal"
                android:layout_marginEnd="@dimen/audio_player_title_margin_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/audio_player_image_view"
                tools:text="Station Name"
                tools:ignore="SpUsage"/>

        <ImageView
                android:id="@+id/audio_player_play_pause_button"
                android:layout_width="@dimen/audio_player_play_pause_button_size"
                android:layout_height="@dimen/audio_player_play_pause_button_size"
                android:src="@drawable/ic_baseline_play_circle_filled_24px"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:onClick="@{() -> viewModel.playPause()}"
                app:togglePlayPause="@{viewModel.isPlaying}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/audio_player_title_text_view"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
